{% extends 'base.html.twig' %}

{% block body %}

    <h1>Résumé de votre réservation</h1>

    <div class="jumbotron">
        <h2>Tableau récapitulatif</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Billet n°</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date de naissance</th>
                    <th>Pays</th>
                    <th>Tarif réduit ?</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for customer in user %}
                    {% set counter = counter + 1 %}
                <tr>
                    <td>{{ counter }}</td>
                    <td>{{ customer.lastname }}</td>
                    <td>{{ customer.firstname }}</td>
                    <td>{{ customer.birthdate }}</td>
                    <td>{{ customer.country }}</td>
                    {% if customer.reducedprice == 0 %}
                        <td>Non</td>
                    {% else %}
                        <td>Oui</td>
                    {% endif %}
                    <td>{{ customer.price }}</td>

                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

    {{ sum }}

    <button type="button" class="btn btn-danger">Annuler la réservation</button>
    <button type="button" class="btn btn-primary">Procéder au paiement</button>

{% endblock %}