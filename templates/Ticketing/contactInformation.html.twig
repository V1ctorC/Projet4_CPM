{% extends 'base.html.twig' %}

{% block body %}

    <h1>Vos coordonnées</h1>

    <p> Vous allez acheter {{ number }} {% if number > 1 %} billets {% else %} billet {% endif %} pour {{ ticketType }}
    journée au musée du Louvre le {{ dateVisit }}</p>

    {{ form_start(form) }}

        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.birthdate, {'attr': {'readonly' : true}}) }}
